#block-views-news3-block { /* Блок новостей НОВЫЙ */
background:#ccc;
padding: 0px 10px;}

#block-views-news3-block .views-row {/* Блок новостей НОВЫЙ */
border-bottom:double;
border-bottom-color:red;
padding: 7px 0;}
#block-views-news3-block .block-title {/* Блок новостей НОВЫЙ */
padding-top: 10px;
padding-bottom: 10px;
font-family: Comic Sans MS;
color: red;
font-size: 1.2em;
text-shadow: -1px -1px 1px #999;
font-weight: bold;
text-align:center;

}

#block-views-news3-block .content a:hover/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .content a:active/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .content a:focus/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .content a/* Блок новостей НОВЫЙ */ {
color: #fff;
text-shadow: 1px 1px  1px red;
}


#block-views-news3-block .pager/* Блок новостей НОВЫЙ */{
	display:inline;

		/*display:inline-block;*/
	color: #fff;
text-shadow: 1px 1px  1px red;
margin: 0;
padding: 10px;
}
	
#block-views-news3-block .pager li/* Блок новостей НОВЫЙ  Костыль*/{
margin: 0;

}
		
	
	
#block-views-news3-block .more-link/* Блок новостей НОВЫЙ */{

	display:inline-block;}

#block-views-news3-block .pager a:hover/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .pager a:active/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .pager a:focus/* Блок новостей НОВЫЙ */ {
	background:#000;}
#block-views-news3-block .pager a/* Блок новостей НОВЫЙ */ {
color: #fff;
text-shadow: 1px 1px  1px red;
}


